<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGame.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Background="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource OffBlack}}">
            <VerticalStackLayout 
                HorizontalOptions="Fill">
                <HorizontalStackLayout
                    Spacing="0"
                    HorizontalOptions="Center">
                    <Label
                        Text="Linked"
                        Style="{StaticResource Headline}"
                        VerticalOptions="Center"/>
                    <Image
                        Source="linkedin_logo.png"/>
                </HorizontalStackLayout>
                <Label
                    Text="Skill assessment quizzes"
                    Style="{StaticResource Headline}"/>
            </VerticalStackLayout>

            <Frame
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Primary}}"
                BorderColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                CornerRadius="20"
                HorizontalOptions="Fill"
                Padding="0,0,0,0">
                <VerticalStackLayout>
                    <SearchBar
                        TextChanged="OnSearchBarTextChanged"
                        Placeholder="Search topic"
                        Style="{StaticResource SubHeadline}" 
                        Margin="10, 10, 10, 10"
                        WidthRequest="300"/>
                    <Frame
                        HorizontalOptions="Fill"
                        BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray600}}"
                        BorderColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                        CornerRadius="20"
                        Padding="0,0,0,0">
                        <CollectionView ItemsSource="{Binding SelectedTopicNames}" WidthRequest="230" Margin="0, 5, 0, 5">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Text="{Binding .}"
                                        Margin="0,5,0,5"/>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
