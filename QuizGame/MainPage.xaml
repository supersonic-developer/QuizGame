<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:QuizGame.ViewModels"
             xmlns:views="clr-namespace:QuizGame.Views"
             x:Class="QuizGame.MainPage">

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <ContentView>
                <views:HeaderView x:Name="headerView"/>
            </ContentView>
        </Grid>

        <Grid Grid.Row="1">
            <ContentView>
                <views:TopicsView x:Name="topicsView"/>
            </ContentView>
        </Grid>
    </Grid>
</ContentPage>
