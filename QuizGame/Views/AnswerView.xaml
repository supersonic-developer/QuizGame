<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGame.Views.AnswerView"
             xmlns:local="clr-namespace:QuizGame.Views">

    <VerticalStackLayout>
        <Label 
            Text="{Binding Answer.Text}"/>
        <ContentView>
            <local:CodeSnippetView BindingContext="{Binding CodeSnippetViewModel}"/>
        </ContentView>
    </VerticalStackLayout>
</ContentView>
