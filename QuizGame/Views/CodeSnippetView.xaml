<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuizGame.Views.CodeSnippetView">

    <WebView
        BackgroundColor="{AppThemeBinding Light={StaticResource CodeBackgroundLight}, Dark={StaticResource CodeBackgroundDark}}"
        IsVisible="{Binding IsVisible}"
        Margin="10,0,10,0">
        
        <WebView.Source>
            <HtmlWebViewSource Html="{Binding Html2Display}"/>
        </WebView.Source>
        
    </WebView>
</ContentView>
